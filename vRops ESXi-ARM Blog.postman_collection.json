{
	"info": {
		"_postman_id": "5873ec76-c573-4540-9341-565d57d826d4",
		"name": "vRops ESXi-ARM Blog",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "DF - Acquire Token",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"username\" : \"{{user}}\",\n  \"password\" : \"{{password}}\"\n}"
				},
				"url": {
					"raw": "https://{{vrops}}/suite-api/api/auth/token/acquire",
					"protocol": "https",
					"host": [
						"{{vrops}}"
					],
					"path": [
						"suite-api",
						"api",
						"auth",
						"token",
						"acquire"
					]
				}
			},
			"response": []
		},
		{
			"name": "DF - Get Host",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "vRealizeOpsToken {{token}}",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "https://{{vrops}}/suite-api/api/resources?adapterKind=VMWARE&resourceKind=HostSystem&name={{rpi4}}",
					"protocol": "https",
					"host": [
						"{{vrops}}"
					],
					"path": [
						"suite-api",
						"api",
						"resources"
					],
					"query": [
						{
							"key": "adapterKind",
							"value": "VMWARE"
						},
						{
							"key": "resourceKind",
							"value": "HostSystem"
						},
						{
							"key": "name",
							"value": "{{rpi4}}"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "DF - Post Host Custom Property CPUTemp",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "ebe67ad0-a9ef-4836-ae2a-bd2592c373d7",
						"exec": [
							"var epoch = (new Date).getTime();",
							"postman.setEnvironmentVariable(\"epoch\", epoch);",
							"postman.setEnvironmentVariable(\"objectID\", \"{{hostid}}\");"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "vRealizeOpsToken ac97277c-b93c-4f1a-a2a0-45e9b5241037::d1fa8bd6-e100-4866-b7f9-b59fde46f76a",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"property-content\" : [ \n      {\n    \"statKey\" : \"CustomProps|CPUTemp\",\n    \"timestamps\" : [ {{epoch}} ],\n    \"data\" : [ 40 ],\n    \"others\" : [ ],\n    \"otherAttributes\" : { }\n     } \n  ]\n}"
				},
				"url": {
					"raw": "https://{{vrops}}/suite-api/api/resources/{{hostid}}/properties",
					"protocol": "https",
					"host": [
						"{{vrops}}"
					],
					"path": [
						"suite-api",
						"api",
						"resources",
						"{{hostid}}",
						"properties"
					]
				}
			},
			"response": []
		}
	],
	"protocolProfileBehavior": {}
}